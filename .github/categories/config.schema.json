{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Category Config",
  "description": "Configuration for the repository categories GitHub action config.json file.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "templateFiles": {
      "type": "object",
      "description": "Template files to use for the categories.",
      "additionalProperties": false,
      "properties": {
        "readme": {
          "type": "string",
          "description": "Template file for the README."
        },
        "category": {
          "type": "string",
          "description": "Template file for the category."
        },
        "repository": {
          "type": "string",
          "description": "Template file for the repository."
        }
      }
    },
    "labelSearchPattern": {
      "type": "string",
      "description": "The pattern to search for in the repository labels."
    },
    "repositoryBlacklist": {
      "type": "array",
      "description": "List of repository names to blacklist.",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "description": "Repository name to blacklist."
      }
    },
    "categories": {
      "type": "object",
      "description": "Categories",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "object",
          "description": "ID if the category.",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "string",
              "description": "Category properties."
            }
          }
        },
        "default": {
          "type": "string",
          "description": "Default category to use if no category is found."
        }
      },
      "required": [ "id", "default" ]
    }
  },
  "required": [
    "templateFiles",
    "categories"
  ]
}
